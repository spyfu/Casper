{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

<header class="site-header outer nacho-header">
    {{> "site-nav"}}
</header>

<div class="nacho-alert" data-nacho="alert" style="display:none;">
    Thanks for signing up! <span style="margin-left: 6px">ðŸ¥³</span>
</div>

{{!-- The main content area --}}
<main id="site-main" class="site-main outer">
    <div class="inner">

        <div class="post-feed">
            {{#foreach posts}}

                {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
                {{> "post-card"}}

            {{/foreach}}
        </div>
    </div>
</main>

{{#contentFor "scripts"}}
<script>
// https://stackoverflow.com/questions/7731778/get-query-string-parameters-url-values-with-jquery-javascript
var urlParam = function (name) {
    var results = new RegExp('[\?&]' + name + '=([^&#]*)')
                      .exec(window.location.search)
    return (results && results[1]) || 0
}

$(document).ready(function() {
    if (urlParam("signup")) {
        $('[data-nacho="alert"]').slideDown()
    } else {
        $('[data-nacho="ifs-form"]').slideDown()
    }
})
</script>
{{/contentFor}}
